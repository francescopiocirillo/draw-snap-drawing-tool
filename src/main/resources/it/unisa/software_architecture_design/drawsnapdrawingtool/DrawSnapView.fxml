                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#onSavePressed" text="Salva" />
                        <MenuItem mnemonicParsing="false" onAction="#onLoadPressed" text="Carica" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <ToolBar id="toolBar" fx:id="toolBarFX" disable="true">
               <items>
                  <Button id="button" alignment="TOP_CENTER" minWidth="107.0" mnemonicParsing="false" onAction="#onDeletePressed" prefHeight="35.0" prefWidth="110.0">
                     <graphic>
                        <ImageView fitHeight="31.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/icon-delete.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button id="button" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCopyPressed" prefHeight="35.0" prefWidth="122.0">
