                           <graphic>
                              <ImageView fitHeight="27.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/ellisse.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button id="button" fx:id="rectangleButton" alignment="CENTER" mnemonicParsing="false" textAlignment="CENTER">
