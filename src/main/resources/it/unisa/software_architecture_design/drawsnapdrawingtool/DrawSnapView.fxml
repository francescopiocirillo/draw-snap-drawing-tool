                        <ImageView fitHeight="31.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/copy3.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button id="button" alignment="CENTER" contentDisplay="CENTER" layoutX="103.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCutPressed" prefHeight="35.0" prefWidth="112.0">
                     <graphic>
                        <ImageView fitHeight="31.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/taglia.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </items>
            </ToolBar>
            <StackPane id="canvaContainer" fx:id="canvasContainer" VBox.vgrow="ALWAYS">
               <children>
                  <Canvas fx:id="canvas" height="580.0" nodeOrientation="INHERIT" width="800.0" />
                  <HBox id="barra" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" spacing="30.0" StackPane.alignment="BOTTOM_CENTER">
                     <children>
                        <Button id="button" fx:id="selectButton" alignment="CENTER" contentDisplay="RIGHT" layoutX="159.0" layoutY="18.0" mnemonicParsing="false" textAlignment="CENTER">
                           <graphic>
                              <ImageView fitHeight="31.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/up-right-arrow.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button id="button" fx:id="ellipseButton" alignment="CENTER" mnemonicParsing="false" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
